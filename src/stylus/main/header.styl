.header
	sizeElement(100%, $headerHeight)
	elementPosition(fixed, 0, 0)
	background-color $white
	z-index 10
	&:after
		@extend $pseudoElement
		sizeElement(100%, 1px)
		background-color $grayLight
		left 0
		bottom 0
		z-index 10

	.header__nav
		@extend $transitionSlow
		@extend $centerText
		line-height $headerHeight
		li
			display inline-block
			&:not(:last-child)
				margin-right 9%
		a
			font-size 14px
			&.active
				color $blackSignal

	.header__menu-btn
		@extend $cursorPointer
		@extend $centerElementY
		sizeElement(40px, 30px)
		position absolute
		top 50%
		right 15px
		display none
		z-index 4
		span
			@extend $relativePosition
			top 13px
			&:after
				content: '';
				position: absolute;
				top: 10px;
			&:before
				content: '';
				position: absolute;
				top: -10px;
		span,
		span:before,
		span:after
			display: block;
			width: 100%;
			height: 6px;
			background-color $accentColor
			border-radius: 4px;
			transition: all .3s ease;
		&.active
			z-index 12
			span
				background-color $transparent
				&:after,
				&:before
					background-color $accentColor
					top 0
				&:after
					transform rotate(-45deg)
				&:before
					transform rotate(45deg)




